{
    "name": "@peterdekok/color-compare",
    "version": "1.0.2",
    "license": "MIT",
    "description": "Compare colors to one another. Especially useful for validating color input fields.",
    "keywords": [
        "color",
        "compare",
        "css",
        "sRGB",
        "RGB",
        "RGBA",
        "composition",
        "blending",
        "WCAG",
        "contrast",
        "luminance",
        "background",
        "foreground",
        "text"
    ],
    "sideEffects": false,
    "private": false,
    "files": [
        "lib/"
    ],
    "main": "./lib/color-compare.umd.js",
    "module": "./lib/color-compare.es.js",
    "types": "./lib/color.d.ts",
    "exports": {
        ".": {
            "import": "./lib/color-compare.es.js",
            "require": "./lib/color-compare.umd.js"
        }
    },
    "repository": "git@github.com:PeterDeKok/color-compare.git",
    "author": {
        "name": "Peter de Kok",
        "email": "info@peterdekok.nl"
    },
    "homepage": "https://github.com/PeterDeKok/color-compare",
    "scripts": {
        "clean": "rimraf lib/*",
        "dev": "vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "test": "jest"
    },
    "devDependencies": {
        "@jest/globals": "^27.5.1",
        "@types/jest": "^27.4.0",
        "@types/node": "^17.0.18",
        "jest": "^27.5.1",
        "rimraf": "^3.0.2",
        "ts-jest": "^27.1.3",
        "typescript": "^4.5.4",
        "vite": "^2.8.0"
    }
